{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -q 'git commit'; then cd /Users/gujaeseo/Documents/projects/gigr/NEXUS && npx tsc --noEmit 2>&1; fi",
            "timeout": 60000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd /Users/gujaeseo/Documents/projects/gigr/NEXUS && npx tsc --noEmit 2>&1 || true",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}
